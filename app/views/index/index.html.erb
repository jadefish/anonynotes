<main class="row">
    <h1>Anonynotes</h1>
    <p>Anonynotes is an anonymous note-sharing service.</p>
    <p>Get started and <%=link_to 'post a note', controller: :notes, action: :new%>.</p>
    <section class="notes-digest">
        <section>
            <h1>New</h1>
            <% if @new_notes.empty? %>
                <p>None yet!</p>
            <% else %>
                <ol>
                    <%=render partial: "notes/list_item", collection: @new_notes, as: :note%>
                </ol>
            <% end %>
        </section>
        <section>
            <h1>Best of</h1>
            <% if @best_notes.empty? %>
                <p>None yet!</p>
            <% else %>
                <ol>
                    <%=render partial: "notes/list_item", collection: @best_notes, as: :note%>
                </ol>
            <% end %>
        </section>
    </section>
</main>
